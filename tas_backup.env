#---------------------------------------
# TAS + Ops Manager Backup Configuration
#---------------------------------------

# BOSH/TAS Settings
BOSH_TARGET=""
BOSH_USER=""
BOSH_CLIENT_SECRET=""
PRIVATE_KEY_PATH=""

# BBR SSH credentials
BOSH_BBR_USERNAME=bbr
BOSH_BBR_PRIVATE_KEY=/path/to/bbr.key
# Address of the BOSH director
BOSH_BBR_HOST=10.0.0.5 

# Backup Settings
BACKUP_DIR="/var/tmp/tas-backups"
ROTATE_DAYS=7

# Ops Manager Settings
export OM_TARGET="https://opsmanager.example.com"
export OM_USERNAME="admin"
export OM_PASSWORD="password"
export OM_SKIP_SSL_VALIDATION=true

# Debug mode - need to test this
DEBUG=true